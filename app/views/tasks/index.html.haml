%h1 任務列表

%br
= link_to('新增任務', new_task_path, class: 'btn btn-primary mr-3')
%br 
 
%table.table.table-hover
  %thead.thead-default
    %tr
      %th= sort_link(@q, :name, '任務名稱', [:name, created_at: :desc])
      %th= Task.human_attribute_name('建立時間')
      %th
  %tbody
    - @tasks.each do |task|
      %tr
        %td= link_to(task.name, task_path(task))
        %td= task.created_at
        %td
          = link_to('編輯', edit_task_path(task), class: 'btn btn-primary mr-3')
          = link_to('刪除', task, method: :delete, data: { confirm: "確定刪除 「#{task.name}」?"}, class: 'btn btn-danger')

= link_to('下載', tasks_path(format: :csv), class: 'btn btn-primary mb-3')